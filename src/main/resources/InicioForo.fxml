<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Foro.Controllers.InicioController"
            prefWidth="600" prefHeight="400">

    <VBox alignment="CENTER" spacing="15"
          layoutX="100" layoutY="70"
          prefWidth="400"
          AnchorPane.leftAnchor="100"
          AnchorPane.rightAnchor="100"
          AnchorPane.topAnchor="70">

        <Label text="Bienvenido al Foro">
            <font>
                <Font size="24"/>
            </font>
        </Label>

        <TextField fx:id="campoUsuario"
                   promptText="Nombre de usuario"
                   prefWidth="300"/>

        <PasswordField fx:id="campoClave"
                       promptText="Contraseña"
                       prefWidth="300"/>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Iniciar Sesión"
                    onAction="#manejarInicioSesion"/>

            <Button text="Registrarse"
                    onAction="#redirigirARegistro"/>
        </HBox>
    </VBox>

</AnchorPane>
