<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Foro.control.PerfilController"
      spacing="10" style="-fx-padding: 20;">

    <Label fx:id="lblTitulo" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    <Label fx:id="lblNombre"/>
    <Label fx:id="lblEdad"/>
    <Label fx:id="lblGenero"/>
    <Label fx:id="lblUsuario"/>
    <Label fx:id="lblBio" wrapText="true" style="-fx-font-style: italic;"/>

    <Separator/>

    <Label text="Editar biografía:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="campoBio" wrapText="true" prefRowCount="3"/>
    <Button text="Actualizar Biografía" onAction="#actualizarBio"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>
