<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Foro.control.RegistroController">
    <children>
        <Text layoutX="180.0" layoutY="40.0" text="Registro de Usuario" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

        <Label layoutX="100.0" layoutY="100.0" text="Nombre:"/>
        <TextField fx:id="campoNombre" layoutX="220.0" layoutY="96.0" prefWidth="250.0"/>

        <Label layoutX="100.0" layoutY="140.0" text="Edad:"/>
        <TextField fx:id="campoEdad" layoutX="220.0" layoutY="136.0" prefWidth="100.0"/>

        <Label layoutX="100.0" layoutY="180.0" text="Género:"/>
        <ComboBox fx:id="comboGenero" layoutX="220.0" layoutY="176.0" prefWidth="150.0" promptText="Seleccione"/>

        <Label layoutX="100.0" layoutY="220.0" text="Usuario:"/>
        <TextField fx:id="campoUsuario" layoutX="220.0" layoutY="216.0" prefWidth="250.0"/>

        <Label layoutX="100.0" layoutY="260.0" text="Contraseña:"/>
        <PasswordField fx:id="campoClave" layoutX="220.0" layoutY="256.0" prefWidth="250.0"/>

        <Button layoutX="220.0" layoutY="300.0" text="Registrarse" onAction="#registrar"/>
        <Button layoutX="350.0" layoutY="300.0" text="Volver" onAction="#volverAlInicio"/>
    </children>
</AnchorPane>
